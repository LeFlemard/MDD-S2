def importationFichierVersVariable(carte):
	carte = open(carte,"r")
	map=[]
	for ligne in carte:
		map.append(ligne)
	carte.close()
	return map

def filtrerMap(map):
	global listeDecor
	global listeTexture
	for ligne in map :
		ligne=str(ligne)
		ligne=ligne.strip("\n")
		ligne=ligne.split(":")
		variable=ligne[0]
		valeur=ligne[1].split()
		if variable == 'positionInitiale' :
			move.changeParametreCamera(eval(valeur[0]),eval(valeur[1]))
		elif variable == 'texture' :
			listeTexture[valeur[0]] = draw.loadTexture(valeur[1])
